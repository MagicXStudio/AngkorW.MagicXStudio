{
    "ConnectionStrings": {
        "SqlDb": "Server=localhost\\SQLEXPRESS01;Database=Oee;Trusted_Connection=True;"
    },

    "Serilog": {
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "MinimumLevel": "Debug",
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": { "path": "Serilog/log.txt" }
            }
        ]
    }
}
